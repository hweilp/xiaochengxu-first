/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.swiper{
  width: 100%;
  height: 240px;
  margin-bottom: 20px;
}
.slide-image{
  width: 100%;
  height: 240px;
}
.userinfo, .uploader, .tunnel {
  padding-left: 20px;
  box-sizing: border-box;
  height: 160rpx;
  width: 100%;
  background: #FFF;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-left: 10px;
  font-size: 32rpx;
  color: #007AFF;
  background-color: white; 
}

.userinfo-nickname::after {
  border: none;
}
.img-item{
  margin: 0px 0px 10px;
  position: relative;
  transition: all .2s cubic-bezier(0.075, 0.82, 0.165, 1)
}
.img-item:hover .clear-block{
  display: block;
}
.clear-block{
  display: none;
  position: absolute;
  right: 0;
   width: 19px;
  height: 19px;
  background: rgba(245, 108, 108, 1);
  border-radius: 20px;
}
.clear-icon{
  position: absolute;
}
.myMap{
  width: 100%;
  border-top: 1px solid rgba(0, 0, 0, .1); 
  border-bottom: 1px solid rgba(0, 0, 0, .1); 
  background: white;
  padding-left: 0px;
  margin-bottom: 20px;
  box-sizing: border-box;
}
#myMap{
  width: 100%;
  height: 400rpx;
}